<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="registerViewModel"
            type="com.shantanu.example.modelbasic.ui.feature.register.RegistrationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">


        <ImageView
            android:id="@+id/fragment_registeration_imageview_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"/>

        <EditText
            android:id="@+id/fragment_registeration_edittext_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_user_account"
            android:hint="Username"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_registeration_imageview_logo" />


        <EditText
            android:id="@+id/fragment_registeration_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_user_account"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_registeration_edittext_username" />

        <EditText
            android:id="@+id/fragment_registeration_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_user_account"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_registeration_edittext_email" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_registeration_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_registeration_edittext_password" />

        <TextView
            android:id="@+id/fragment_registeration_textview_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="15sp"
            android:textColor="#4B99FB"
            android:drawableLeft="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_registeration_button_register"
            android:layout_marginTop="18dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>